	Z::Point::from_csv_vec(v_);

	int ind = Z::Point::TIME_FIELDS;

	_instr_key = v_[ind++];
	_cqg_InstrumentID = atol(v_[ind++]);
	_vwap = atof(v_[ind++]);
}
