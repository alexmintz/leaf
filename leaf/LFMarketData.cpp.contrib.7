std::string LFSecurityMaster::get_ng(const TCDate& d)
{
	std::string nge = NG_EXCH; // "NG"
	_tick_size = 0.001;
	_tick_value = 10;
	_pf = 1000;

	unsigned char	m = d.month();
	ACE_UINT16		y = d.year();

	unsigned char exp_day = ng_future_switch(d);

	if (d.day() < exp_day)
		m += 1;
	else
		m += 2;
	if (m > 12)
	{
		m -= 12;
		y++;
	}
	nge += future_char(m, d, nge);
	nge += year_str(y);

	return nge;
}
